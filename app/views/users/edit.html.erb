<h1>Edit user profile</h1>

<%= form_for :user, method: :patch do |f| %>
	<p>
		<%= f.label "First name" %><br>
		<%= f.text_field :fname %>
	</p>

	<p>
		<%= f.label "Last name" %><br>
		<%= f.text_field :lname %>
	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %><br>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
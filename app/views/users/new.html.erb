<h1>Sign up as a new user</h1>

<%= form_for :user, url: users_path do |f| %>
	<p>
		<%= f.label "First name" %><br>
		<%= f.text_field :fname %>
	</p>

	<p>
		<%= f.label "Last name" %><br>
		<%= f.text_field :lname %>
	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %><br>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>